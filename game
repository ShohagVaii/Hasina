            left: 0;
        }
        .watermark {
            position: absolute;
            font-size: 40px;
            font-weight: bold;
            color: rgba(255, 255, 255, 0.2);
            white-space: nowrap;
            pointer-events: none;
            animation: moveWatermark 10s linear infinite;
        }
        @keyframes moveWatermark {
            0% { transform: translate(-100%, -100%) rotate(0deg); }
            50% { transform: translate(50vw, 50vh) rotate(180deg); }
            100% { transform: translate(100%, 100%) rotate(360deg); }
        }
        .particles {
            position: absolute;
            width: 100%;
